<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Strava.Models"
             x:Class="Strava.Views.Components.ClubCard"
             x:DataType="models:ClubSuggestionModel">

    <Border StrokeShape="RoundRectangle 20"
            BackgroundColor="White"
            WidthRequest="160"
            HeightRequest="220"
            StrokeThickness="0"
            Margin="10,5">

        <Border.Shadow>
            <Shadow Brush="#FFA500" Offset="0,5" Opacity="0.1" Radius="10" />
        </Border.Shadow>

        <Grid RowDefinitions="Auto, *, Auto" Padding="12">
            
            <Label Text="✕" 
                   HorizontalOptions="End" 
                   TextColor="#999999"
                   FontSize="18"/>

            <VerticalStackLayout Grid.Row="1" Spacing="5" VerticalOptions="Center">
                
                <Border StrokeShape="RoundRectangle 35" 
                        HeightRequest="70" WidthRequest="70" 
                        StrokeThickness="0" HorizontalOptions="Center"
                        BackgroundColor="#F5F5F5">
                    <Image Source="{Binding ClubLogoSource}" Aspect="AspectFill"/>
                </Border>
                
                <Label Text="{Binding ClubName}" 
                       TextColor="Black" 
                       FontAttributes="Bold"
                       FontSize="15"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="TailTruncation"/>
                       
                <Label Text="{Binding Subtitle}" 
                       FontSize="11" 
                       TextColor="#666666" 
                       HorizontalTextAlignment="Center"
                       MaxLines="2"/>
            </VerticalStackLayout>

            <Border Grid.Row="2" 
                    StrokeShape="RoundRectangle 8"
                    HeightRequest="36"
                    Stroke="#E6E6E6"
                    StrokeThickness="1"
                    BackgroundColor="Transparent"
                    Margin="0,5,0,0">
                <Label Text="Join" 
                       TextColor="#FC5200" 
                       FontSize="13" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </Border>
        </Grid>
    </Border>

</ContentView>