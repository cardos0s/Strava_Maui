<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Strava.Views.Components.ActivityChip.ActivityChip"
             x:Name="Root">
    
    <Border StrokeShape="RoundRectangle 20"
            Padding="15,8"
            StrokeThickness="1"
            Stroke="#E0E0E0"
            BackgroundColor="White">
        
        <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
            <Image Source="{Binding Icon, Source={x:Reference Root}}"
                   HeightRequest="18"/>

            <Label Text="{Binding Text, Source={x:Reference Root}}"
                   FontSize="13"
                   FontAttributes="Bold"
                   TextColor="#404040"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>