<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Strava.ViewModels"
             xmlns:models="clr-namespace:Strava.Models"
             x:Class="Strava.Views.OnboardingScreen">
    
   
    
    <Grid RowDefinitions="*, Auto, Auto">
        
        <CarouselView ItemsSource="{Binding Items}"
                      Position="{Binding Position}">
            <CarouselView.ItemTemplate>
                <DataTemplate x:DataType="models:OnBoardingModel">
                    <VerticalStackLayout Spacing="20" VerticalOptions="Center">
                        <Image Source="{Binding IntroImage}" HeightRequest="300"/>
                        <Label Text="{Binding IntroTitle}" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />
                        <Label Text="{Binding IntroDescription}" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <Button Grid.Row="2"
                Text="COMEÇAR"
                Command="{Binding FinishOnBoardingCommand}"
                BackgroundColor="#FC4C02"
                TextColor="White"
                Margin="20" />
    </Grid>
</ContentPage>